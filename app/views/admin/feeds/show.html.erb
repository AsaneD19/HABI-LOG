<h1><%= @member.account_id %> - <%= @feed.text_content %></h1>

<% if @post_comments.count == 0 %>
  <div><font color="red">コメントはありません。</font></div>
<% else %>
  <% @post_comments.each do |post_comment| %>
    <div>
      <%= post_comment.created_at %> -
      <%= link_to admin_member_path(@member) do %>
        <b><%= post_comment.member.account_id %></b>
      <% end %>
      - <%= post_comment.content %> -
      <!-- link_to "削除", admin_feed_path(feed), method: :delete, data: {confirm: "削除します。よろしいですか？"} %>-->
    </div>
  <% end %>
<% end %>
