<h1><%= @member.name %>(<%= @member.account_id %>)のコメント一覧</h1>
<%= link_to "戻る", admin_member_path(@member) %>
<% if @post_comments.count == 0 %>
  <div><font color="red">投稿はありません。</font></div>
<% else %>
  <% @post_comments.each do |post_comment| %>
    <div>
      <%= post_comment.created_at %> -
      - <%= post_comment.content %> -
      <%= link_to "削除", admin_member_post_comment_path(@member, post_comment), method: :delete, data: {confirm: "削除します。よろしいですか？"} %>
    </div>
  <% end %>
<% end %>
