<h1>User info</h1>
<% if @member.errors.any? %>
  <%= render 'layouts/error_message', error_obj: @member %>
<% end %>

<%= form_with model: @member, url: member_path(@member.id), method: :patch do |f| %>
  <p>アカウント名</p>
  <%= f.text_field :account_id, value: @member.account_id %>
  <br>
  <p>ニックネーム</p>
  <%= f.text_field :name, value: @member.name %>
  <br>
  <p>Image</p>
  <%= f.file_field :profile_image, accept: "image/*" %>
  <p>Introduction</p>
  <%= f.text_area :introduction, value: @member.introduction %>
  <br>
  <div class="field">
    <%= f.check_box :is_private %>アカウントを非公開にする
  </div>

  <%= f.submit '更新' %>
<% end %>
<%= link_to "戻る", member_path(@member.id) %>

<h3><%= link_to "退会する", confirm_path %></h3>
