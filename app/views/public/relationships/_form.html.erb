<% if current_member.following?(member)  %>
  <%= link_to "フォロー解除", member_relationship_path(member), method: :delete %>
<% else %>
  <% if member.is_private %>
    <% if current_member.requested?(member) %>
      フォローリクエスト済
    <% else %>
      <%= link_to 'フォローリクエスト', member_follow_request_path(member), method: :post %>
    <% end %>
  <% else %>
    <%= link_to 'フォローする', member_relationship_path(member), method: :post %>
  <% end %>
<% end %>
