<div class="row">
  <div class="col-md-8 offset-md-2">
    <br>
    <% if @post_comments.count == 0 %>
      <p><font color="red">まだコメントがありません</font></p>
    <% else %>
      <h4>コメント一覧</h4>
      <% post_comments.each do |post_comment| %>
        <%= link_to feed_post_comment_path(feed_id: post_comment.feed.id, id: post_comment.id), class: "text-decoration-none" do %>
          <%= render "public/post_comments/data", post_comment: post_comment %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
