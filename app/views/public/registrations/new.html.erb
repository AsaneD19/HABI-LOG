<div class="container-fluid">
  <div class="row justify-content-center">
    <h1>メンバー登録</h1>
  </div>
  <div class="row justify-content-center">

    <%= form_with model: @member, url: member_registration_path do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :"アカウントＩＤ", class: "form-label" %><br />
        <%= f.text_field :account_id, class: "form-control form-control-lg", autofocus: true, autocomplete: "account_id" %>
      </div>

      <div class="field">
        <%= f.label :"アカウントネーム", class: "form-label" %><br />
        <%= f.text_field :name, class: "form-control form-control-lg", autofocus: true, autocomplete: "name" %>
      </div>

      <div class="field">
        <%= f.label :"メールアドレス", class: "form-label"%><br />
        <%= f.email_field :email, class: "form-control form-control-lg", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
      <div class="field">
        <%= f.label :is_private, "アカウントを非公開にする" %>
        <%= f.check_box :is_private %>
      </div>
      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
  </div>

  <%= render "devise/shared/links" %>
</div>