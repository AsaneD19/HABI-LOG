<% case notification.notifiable_type %>
<% when "Relationship" %>
  <% if notification.notifiable.follower == current_member %>
    <%= render "public/members/display_name", member: notification.notifiable.followed, with_lock_icon: false %>さんにフォロー承認されました。
  <% else %>
    <%= render "public/members/display_name", member: notification.notifiable.follower, with_lock_icon: false %>さんにフォローされました。
  <% end %>
<% when "FollowRequest" %>
  <%= render "public/members/display_name", member: notification.notifiable.follower, with_lock_icon: false %>さんのフォローリクエストがあります。
<% when "PostComment" %>
  <%= render "public/members/display_name", member: notification.notifiable.member, with_lock_icon: false %>さんにコメントされました。
<% when "ReplyComment" %>
  <%= render "public/members/display_name", member: notification.notifiable.member, with_lock_icon: false %>さんから返信がありました。
<% when "Favorite" %>
  <%= render "public/members/display_name", member: notification.notifiable.member, with_lock_icon: false %>さんにいいねされました。
<% end %>
