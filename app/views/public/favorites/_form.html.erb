<% if favorable.member == current_member %>
  ♥<%= favorable.favorites.count %>
<% else %>
  <% if favorable.favorited_by?(current_member) %>
    <%= link_to favorite_path(favorable_type: favorable.class.name, favorable_id: favorable.id), method: :delete do %>
      ♥<%= favorable.favorites.count %>
    <% end %>
  <% else %>
    <%= link_to favorite_path(favorable_type: favorable.class.name, favorable_id: favorable.id), method: :post do %>
      ♡<%= favorable.favorites.count %>
    <% end %>
  <% end %>
<% end %>
