<div class="container-fruid">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card mb-3">
        <div class="card-header text-white bg-info h3">
          <%= render "public/members/display_name", member: @habit.member, with_lock_icon: false %>'s Habit：<%= @habit.name %>
        </div>
        <div>
          登録時のコメント：<%= @habit.caption %>
        </div>
        <div>
          回数：<%= @habit.achievement_count %>
        </div>
        <div>
          継続日数：<%= @habit.current_duration %>
        </div>
        <div>
          最大継続日数：<%= @habit.max_duration %>
        </div>
        <div>
          タグ：<%= link_to @habit.tag.name, tag_path %>
        </div>
        <div>
          最終達成日：<%= render "public/habits/display_last_achievement", last_achievement: @habit.last_achievement %>
        </div>
        <div>
          登録日：<%= render "layouts/time_display", time_data: @habit.created_at %>
        </div>
        <% if @habit.member == current_member %>
          <%= render "public/habits/record_form", habit: @habit, habit_record: @habit_record %>
        <% end %>
      </div>
    </div>
  </div>
  <% if @habit_records.count > 0 %>
    <%= render "public/habit_records/list", habit_records: @habit_records %>
  <% else %>
    <h2 class="text-center text-danger">まだ一度も達成していません</h2>
  <% end %>
</div>
