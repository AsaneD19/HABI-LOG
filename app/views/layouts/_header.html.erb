<% if member_signed_in? %>
  <nav class="navbar bg-dark">
    <div class="container-fluid">
      <div class="navbar-brand">
        <%= link_to "HABI-LOG", home_path %>
      </div>
      <br>
      <%= link_to member_path(current_member.id) do %>
        <i class="fa-solid fa-user fa-xl"></i>
        <b><%= current_member.account_id %></b>
      <% end %>
      <%= link_to notifications_path do %>
        <i class="fa-solid fa-bell fa-xl"></i>
        <%= current_member.notifications.where(read: false).count %>
      <% end %>
      <%= link_to destroy_member_session_path, method: :delete do %>
        <i class="fa-solid fa-right-from-bracket fa-xl"></i>
      <% end %>
      <div>
        <%= link_to "習慣の登録", new_member_habit_path(current_member.id) %>
        /
        <%= link_to "習慣の一覧", member_habits_path(current_member.id) %>
      </div>
      <%= render 'public/searches/form' %>
    </div>
  </nav>
<% end %>

