<% if member_signed_in? %>
  <br>
  <b><%= current_member.name %>(<%= current_member.account_id %>)さん</b>
  <br>
  <%= link_to destroy_member_session_path, method: :delete do %>
    <i class="fa-solid fa-right-from-bracket"></i>LogOut
  <% end %>
  <%= link_to home_path do %>
    <i class="fa-solid fa-house"></i>Home
  <% end %>
  <%= link_to member_path(current_member.id) do %>
    <i class="fa-solid fa-user"></i>Profile
  <% end %>
  <div>
    <%= link_to notifications_path do %>
      <i class="fa-solid fa-circle-exclamation"></i>
      <%= current_member.notifications.where(read: false).count %>
    <% end %>
  </div>
  <div>
    <%= link_to "習慣の登録", new_member_habit_path(current_member.id) %>
    /
    <%= link_to "習慣の一覧", member_habits_path(current_member.id) %>
  </div>

  <%= render 'public/searches/form' %>
<% end %>

