<% if member_signed_in? %>
<nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
  <div class="container-fluid">
    <div class="navbar-brand">
      <%= link_to "HABI-LOG", home_path, class: "navbar-brand" %>
    </div>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="#navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav me-5 mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to member_path(current_member.id), class: 'nav-link text-light' do %>
            <i class="fa-solid fa-user fa-xl"></i>
            <%= current_member.account_id %>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to notifications_path, class: 'nav-link text-light' do %>
            <i class="fa-solid fa-bell fa-xl"></i>
            <%= current_member.notifications.where(read: false).count %>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to new_member_habit_path(current_member.id), class: 'nav-link text-light' do %>
            <i class="fa-solid fa-pen-to-square fa-xl"></i>
            New Habit
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to member_habits_path(current_member.id), class: 'nav-link text-light' do %>
            <i class="fa-solid fa-list fa-xl"></i>
            Habit List
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to destroy_member_session_path, class: 'nav-link text-light', method: :delete do %>
            <i class="fa-solid fa-right-from-bracket fa-xl"></i>
            Log Out
          <% end %>
        </li>
        <%= render 'public/searches/form' %>
      </ul>
    </div>
  </div>
</nav>
<% end %>

