<h1><%= member.name %></h1>
<div><%= member.account_id %></div>
<div><%= image_tag member.get_profile_image(100,100) %></div>
<p>フォロー：<%= member.followings.count %></p>
<p>フォロワー：<%= member.followers.count %></p>
<% if member == current_member %>
  <%= link_to "プロフィール編集", edit_member_path(current_member.id) %>
<% else %>
  <%= render "relationships/form", member: member %>
<% end %>

<% if member != current_member && member.is_private && member.passive_relationships.is_approval == false %>
  <h1>非公開メンバーです</h1>
<% else %>
  <p>自己紹介：<%= member.introduction %></p>
  <h4>投稿数：<%= member.feeds.count %></h4>
  <%= render "feeds/list", feeds: member.feeds.order(created_at: :desc) %>
<% end %>

