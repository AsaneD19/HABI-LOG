<%= link_to "戻る", home_path %>

<h2>通知詳細</h2>
<% case @notification.notifiable_type %>
<% when "PostComment" %>
  <h4>コメントされました。</h4>
  <%= render 'feeds/data', feed: @notification.notifiable.feed %>
  <h4>↓</h4>
  <%= render 'post_comments/data', post_comment: @notification.notifiable %>
<% when "Relationship" %>
  <h4>フォローされました。</h4>
  <%= render 'members/data', member: @notification.notifiable.follower %>
<% when "FollowRequest" %>
  <% if @notification.notifiable.is_approval == true %>
    <h4>フォローが承認されました！</h4>
    <%= render 'members/data', member: @notification.notifiable.follower %>
  <% else %>
    <h4>フォローリクエスト！</h4>
    <%= render 'members/data', member: @notification.notifiable.follower %>
    <%= render 'follow_requests/form', member: @notification.notifiable.follower %>
  <% end %>
<% else %>
  <h4>いいねされました。</h4>
  <% if @notification.notifiable.favorable_type == "Feed" %>
    <%= render 'feeds/data', feed: @notification.notifiable.favorable %>
  <% else %>
    <%= render 'post_comments/data', post_comment: @notification.notifiable.favorable %>
  <% end %>
  <h4>↓</h4>
  <%= render 'members/data', member: @notification.notifiable.member %>
<% end %>
